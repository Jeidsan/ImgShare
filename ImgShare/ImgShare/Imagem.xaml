<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImgShare.Imagem">
    <ContentPage.Content>
        <StackLayout>
            <Image 
                x:Uid="imgImagem" 
                x:Name="imgImagem"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="FillAndExpand" />
            <StackLayout Orientation="Horizontal"
                         VerticalOptions="End">
                <Button x:Uid="btnMapa"
                        x:Name="btnMapa"
                        Text="Mapa"
                        WidthRequest="100"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="End" 
                        Clicked="btnMapa_Clicked"/>
                <Button x:Uid="btnCaptura"
                        x:Name="btnCaptura"
                        Text="Captura"
                        WidthRequest="100"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="End" 
                        Clicked="btnCaptura_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>